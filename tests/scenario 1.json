					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"orders",
						"search",
						"customerId"
					],
					"query": [
						{
							"key": "sort",
							"value": "date"
						},
						{
							"key": "custId",
							"value": "{{customer_id}}"
						}
